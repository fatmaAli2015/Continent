<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fatmaali.continent1.ChoiceQuestion_1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginbottomtop">

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:padding="2dp"
            android:text="Result"
            android:textColor="@android:color/black"
            android:textSize="@dimen/rowtxtSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginbottom">

        <TextView
            android:id="@+id/txt_Question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:padding="2dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="@dimen/rowtxtSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_rowAn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:onClick="txt_rowAn1"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="@dimen/rowtxtSize" />

    <TextView
        android:id="@+id/txt_rowAn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:onClick="txt_rowAn2"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="@dimen/rowtxtSize" />

    <TextView
        android:id="@+id/txt_rowAn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:onClick="txt_rowAn3"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="@dimen/rowtxtSize" />

</LinearLayout>
